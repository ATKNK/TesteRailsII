<p style="color: #cbfbf1"><%= notice %></p>

<h1><%= @question.enunciation %></h1>

<p><strong>Questionnaire:</strong> <%= @question.questionnaire&.title %></p>

<h3>Options:</h3>
<ul>
  <% @question.question_options.each do |option| %>
    <li>
      <%= option.title %>
      <% if option.is_correct %>
        <span style="color: green;">(Correct)</span>
      <% end %>
    </li>
  <% end %>
</ul>

<div class="mt-4">
  <a href="/question_options/new/">Add Options</a>
  <%= link_to "Edit this question", edit_question_path(@question), class: "text-blue-400" %> |
  <%= link_to "Back to questions", questions_path, class: "text-gray-400" %>
</div>
